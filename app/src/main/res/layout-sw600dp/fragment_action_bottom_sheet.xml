<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:id="@+id/fragment_history_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@color/dark"

        tools:context=".ui.ActionBottomSheetFragment"
        android:layout_marginBottom="50dp"
        >


        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_paint_image"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/select_edit"
            android:drawablePadding="2dp"
            android:text="Edit"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_saved_image"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/select_saved"
            android:drawablePadding="2dp"
            android:text="Save"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_download_image"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/select_download"
            android:drawablePadding="2dp"
            android:text="Download"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_share_image"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/select_share"
            android:drawablePadding="2dp"
            android:text="Share"/>

    </LinearLayout>

</layout>