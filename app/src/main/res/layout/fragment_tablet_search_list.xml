<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.TabletSearchListFragment"
        android:background="?attr/backgroundcolor"
        >

        <android.support.v7.widget.SearchView
            android:background="?attr/actionbarcolor"
            android:id="@+id/searchView"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="@dimen/zeroDP"
            app:iconifiedByDefault="false"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/zeroDP"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundcolor"
            android:layout_marginStart="@dimen/minusOneDP"
            android:layout_marginTop="@dimen/twoDP"
            android:layout_marginEnd="@dimen/eightDP"
            android:layout_marginBottom="@dimen/twoDP"
            android:padding="@dimen/twoDP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView">

            <android.support.v7.widget.RecyclerView
                android:background="?attr/backgroundcolor"
                android:id="@+id/quickChooseList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/single_quck_search">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/searchDefaultList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zeroDP"
            android:layout_margin="@dimen/twoDP"
            android:layout_marginTop="@dimen/eightDP"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
           >

        </android.support.v7.widget.RecyclerView>




    </android.support.constraint.ConstraintLayout>
</layout>